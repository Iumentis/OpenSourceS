getgenv().infsprint = false;


--Services here
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local sprintEvent = ReplicatedStorage:WaitForChild("Event")
local sprinting = false
local originalSprintValue = 20


local function infiniteSprint()
    while wait(0.5) do
        if getgenv().infsprint and Players.LocalPlayer.Character then
            local humanoid = Players.LocalPlayer.Character:FindFirstChild("Humanoid")
            
            if humanoid and humanoid.MoveDirection.Magnitude > 0 then
                sprintEvent:FireServer("Actions", {"Sprint", "Enabled"})
            end
        end
    end
end


local Library = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Rayfield/main/source'))()  -- RayField UI Library
local Window = Library:CreateWindow({
    Name = "Sword Burst 2 ",
    LoadingTitle = "Sword Burst 2 Made by Iumentis",
    LoadingSubtitle = "By Iumentis",
})

--refences to tab creation
local pTab = Window:CreateTab("Player")

pTab:CreateToggle({
    Name = "Infinite Sprint",
    CurrentValue = false,
    Callback = function(Value)
        getgenv().infsprint = Value
        
        if Value then
            sprintEvent:FireServer("Actions", {"Sprint", "Enabled"})
            
            -- Show notification
            Library:Notify({
                Title = "Sprint Enabled",
                Content = "Infinite sprint activated",
                Duration = 3,
                Image = "zap"
            })
            spawn(infiniteSprint)
        else
            sprintEvent:FireServer("Actions", {"Sprint", "Disabled"})
        end
    end
})
