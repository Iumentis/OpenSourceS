warn("v1")
--Services here
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local sprintEvent = ReplicatedStorage:WaitForChild("Event")


local Library = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()  -- RayField UI Library
local Window = Library:CreateWindow({
    Name = "Sword Burst 2 ",
    LoadingTitle = "Sword Burst 2 Made by Iumentis",
    LoadingSubtitle = "By Iumentis",
})

--refences to tab creation
local pTab = Window:CreateTab("Player")

pTab:CreateButton({
    Name = "Advanced Sprint (Event Hook)",
    Callback = function()
        for _, v in pairs(getgc()) do
            if type(v) == "function" then
                local info = debug.getinfo(v)
                if info.source and (info.source:find("Sprint") or info.source:find("Mana")) then
                    -- Hook the function to always return true for mana check
                    local success = pcall(function()
                        hookfunction(v, function(...)
                            local args = {...}
                            if args[1] == "Sprint" or (args[2] and tostring(args[2]):find("Mana")) then
                                return true
                            end
                            return v(...)
                        end)
                    end)
                    
                    if success then
                        Library:Notify({
                            Title = "Hook Successful",
                            Content = "Sprint mana check intercepted",
                            Duration = 5,
                            Image = "check-circle"
                        })
                    end
                end
            end
        end
    end
})
